<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0"><i class="bi bi-hearts"></i> Record Reproduction Event</h4>
                </div>
                <div class="card-body">
                    <% if (error && error.length > 0) { %>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <%= error %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    <% } %>

                    <form action="/reproduction/add" method="POST">
                        <div class="mb-3">
                            <label for="motherCowId" class="form-label">Select Mother Cow *</label>
                            <select class="form-select" id="motherCowId" name="motherCowId" required>
                                <option value="">Choose female cattle...</option>
                                <% femaleCows.forEach(cow => { %>
                                    <option value="<%= cow._id %>" 
                                            <%= selectedCow && selectedCow._id.toString() === cow._id.toString() ? 'selected' : '' %>>
                                        <%= cow.earTag %><% if (cow.name) { %> - <%= cow.name %><% } %>
                                    </option>
                                <% }) %>
                            </select>
                        </div>

                        <h5 class="mt-4 mb-3">Mating Information</h5>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="matingDate" class="form-label">Mating Date (Optional)</label>
                                <input type="date" class="form-control" id="matingDate" name="matingDate">
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="method" class="form-label">Method</label>
                                <select class="form-select" id="method" name="method">
                                    <option value="natural">Natural</option>
                                    <option value="artificial">Artificial Insemination</option>
                                </select>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="bullId" class="form-label">Bull ID (Optional)</label>
                            <input type="text" class="form-control" id="bullId" name="bullId"
                                   placeholder="Enter bull identification">
                        </div>

                        <h5 class="mt-4 mb-3">Pregnancy Information</h5>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="pregnancyConfirmedDate" class="form-label">Pregnancy Confirmed Date (Optional)</label>
                                <input type="date" class="form-control" id="pregnancyConfirmedDate" name="pregnancyConfirmedDate">
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="expectedDueDate" class="form-label">Expected Due Date (Optional)</label>
                                <input type="date" class="form-control" id="expectedDueDate" name="expectedDueDate">
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="complications" name="complications">
                                <label class="form-check-label" for="complications">
                                    Complications noted
                                </label>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="notes" class="form-label">Notes</label>
                            <textarea class="form-control" id="notes" name="notes" rows="3"
                                      placeholder="Any additional information..."></textarea>
                        </div>

                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> Birth details and calf information can be added later when the cow gives birth.
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="javascript:history.back()" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Save Event
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
