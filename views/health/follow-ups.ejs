<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h2 class="mb-0">Upcoming Follow-ups</h2>
            <p class="text-muted">Next 7 days</p>
        </div>
        <div class="col-auto">
            <a href="/health" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Health Records
            </a>
        </div>
    </div>

    <% if (error && error.length > 0) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>

    <div class="row">
        <% if (followUps.length === 0) { %>
            <div class="col-12">
                <div class="alert alert-info text-center">
                    <i class="bi bi-calendar-check fs-1 d-block mb-2"></i>
                    <h5>No upcoming follow-ups</h5>
                    <p class="mb-0">All clear for the next 7 days!</p>
                </div>
            </div>
        <% } else { %>
            <% followUps.forEach(followUp => { %>
                <div class="col-md-6 mb-3">
                    <div class="card">
                        <div class="card-header bg-warning">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">
                                    <a href="/cows/<%= followUp.cow._id %>" class="text-dark text-decoration-none">
                                        <%= followUp.cow.earTag %>
                                    </a>
                                </h5>
                                <span class="badge bg-dark">
                                    <%= followUp.followUpDate.toLocaleDateString() %>
                                </span>
                            </div>
                        </div>
                        <div class="card-body">
                            <p class="mb-2"><strong>Original Observation:</strong> <%= followUp.observationDate.toLocaleDateString() %></p>
                            <p class="mb-2"><strong>Symptoms:</strong> <%= followUp.symptoms %></p>
                            <% if (followUp.diagnosis) { %>
                                <p class="mb-2"><strong>Diagnosis:</strong> <%= followUp.diagnosis %></p>
                            <% } %>
                            <% if (followUp.treatment) { %>
                                <p class="mb-2"><strong>Treatment:</strong> <%= followUp.treatment %></p>
                            <% } %>
                            <% if (followUp.vetName) { %>
                                <p class="mb-2"><strong>Vet:</strong> <%= followUp.vetName %></p>
                            <% } %>
                            <hr>
                            <div class="d-flex justify-content-between">
                                <small class="text-muted">Recorded by <%= followUp.recordedBy.name %></small>
                                <a href="/health/<%= followUp._id %>/edit" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } %>
    </div>
</div>

<%- include('../partials/footer') %>
