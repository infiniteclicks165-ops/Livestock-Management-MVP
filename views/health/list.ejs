<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col">
            <h2 class="mb-0">Health Records</h2>
            <p class="text-muted">Total: <%= totalRecords %> records</p>
        </div>
        <div class="col-auto">
            <div class="btn-group">
                <a href="/health/follow-ups" class="btn btn-warning">
                    <i class="bi bi-calendar-check"></i> Follow-ups
                </a>
                <a href="/health/add" class="btn btn-danger">
                    <i class="bi bi-plus-circle"></i> Add Health Record
                </a>
            </div>
        </div>
    </div>

    <% if (error && error.length > 0) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>

    <% if (success && success.length > 0) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Cattle</th>
                            <th>Symptoms</th>
                            <th>Diagnosis</th>
                            <th>Treatment</th>
                            <th>Vet</th>
                            <th>Follow-up</th>
                            <th>Recorded By</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (healthRecords.length === 0) { %>
                            <tr>
                                <td colspan="9" class="text-center text-muted py-4">
                                    No health records found. <a href="/health/add">Add first record</a>
                                </td>
                            </tr>
                        <% } else { %>
                            <% healthRecords.forEach(record => { %>
                                <tr>
                                    <td><%= record.observationDate.toLocaleDateString() %></td>
                                    <td>
                                        <a href="/cows/<%= record.cow._id %>" class="text-decoration-none">
                                            <%= record.cow.earTag %>
                                        </a>
                                    </td>
                                    <td>
                                        <%= record.symptoms.length > 50 ? record.symptoms.substring(0, 50) + '...' : record.symptoms %>
                                    </td>
                                    <td><%= record.diagnosis || '-' %></td>
                                    <td>
                                        <%= record.treatment ? (record.treatment.length > 40 ? record.treatment.substring(0, 40) + '...' : record.treatment) : '-' %>
                                    </td>
                                    <td><%= record.vetName || '-' %></td>
                                    <td>
                                        <% if (record.followUpDate) { %>
                                            <%
                                            const today = new Date();
                                            const followUp = new Date(record.followUpDate);
                                            const isOverdue = followUp < today;
                                            %>
                                            <span class="badge <%= isOverdue ? 'bg-danger' : 'bg-warning text-dark' %>">
                                                <%= record.followUpDate.toLocaleDateString() %>
                                            </span>
                                        <% } else { %>
                                            -
                                        <% } %>
                                    </td>
                                    <td><%= record.recordedBy.name %></td>
                                    <td class="table-actions">
                                        <a href="/health/<%= record._id %>/edit" class="btn btn-sm btn-outline-secondary" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } %>
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <% if (totalPages > 1) { %>
                <nav aria-label="Page navigation" class="mt-4">
                    <ul class="pagination justify-content-center">
                        <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                            <a class="page-link" href="?page=<%= currentPage - 1 %>">Previous</a>
                        </li>
                        <% for (let i = 1; i <= totalPages; i++) { %>
                            <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                            </li>
                        <% } %>
                        <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                            <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
                        </li>
                    </ul>
                </nav>
            <% } %>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
