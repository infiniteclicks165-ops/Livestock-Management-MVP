<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-pencil"></i> Edit Health Record</h4>
                </div>
                <div class="card-body">
                    <% if (error && error.length > 0) { %>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <%= error %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    <% } %>

                    <div class="alert alert-info mb-3">
                        <strong>Cattle:</strong> <%= healthRecord.cow.earTag %>
                        <% if (healthRecord.cow.name) { %> - <%= healthRecord.cow.name %><% } %>
                    </div>

                    <form action="/health/<%= healthRecord._id %>/edit" method="POST">
                        <div class="mb-3">
                            <label for="observationDate" class="form-label">Observation Date *</label>
                            <input type="date" class="form-control" id="observationDate" name="observationDate" 
                                   value="<%= healthRecord.observationDate.toISOString().split('T')[0] %>" required>
                        </div>

                        <div class="mb-3">
                            <label for="symptoms" class="form-label">Symptoms *</label>
                            <textarea class="form-control" id="symptoms" name="symptoms" rows="3" required><%= healthRecord.symptoms %></textarea>
                        </div>

                        <div class="mb-3">
                            <label for="diagnosis" class="form-label">Diagnosis</label>
                            <input type="text" class="form-control" id="diagnosis" name="diagnosis"
                                   value="<%= healthRecord.diagnosis || '' %>">
                        </div>

                        <div class="mb-3">
                            <label for="treatment" class="form-label">Treatment Given</label>
                            <textarea class="form-control" id="treatment" name="treatment" rows="2"><%= healthRecord.treatment || '' %></textarea>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="vetName" class="form-label">Veterinarian Name</label>
                                <input type="text" class="form-control" id="vetName" name="vetName"
                                       value="<%= healthRecord.vetName || '' %>">
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="followUpDate" class="form-label">Follow-up Date</label>
                                <input type="date" class="form-control" id="followUpDate" name="followUpDate"
                                       value="<%= healthRecord.followUpDate ? healthRecord.followUpDate.toISOString().split('T')[0] : '' %>">
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="/cows/<%= healthRecord.cow._id %>" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
