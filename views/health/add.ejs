<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-heart-pulse"></i> Record Health Event</h4>
                </div>
                <div class="card-body">
                    <% if (error && error.length > 0) { %>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <%= error %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    <% } %>

                    <form action="/health/add" method="POST">
                        <div class="mb-3">
                            <label for="cowId" class="form-label">Select Cattle *</label>
                            <select class="form-select" id="cowId" name="cowId" required>
                                <option value="">Choose cattle...</option>
                                <% cows.forEach(cow => { %>
                                    <option value="<%= cow._id %>" 
                                            <%= selectedCow && selectedCow._id.toString() === cow._id.toString() ? 'selected' : '' %>>
                                        <%= cow.earTag %><% if (cow.name) { %> - <%= cow.name %><% } %>
                                    </option>
                                <% }) %>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="observationDate" class="form-label">Observation Date *</label>
                            <input type="date" class="form-control" id="observationDate" name="observationDate" 
                                   value="<%= new Date().toISOString().split('T')[0] %>" required>
                        </div>

                        <div class="mb-3">
                            <label for="symptoms" class="form-label">Symptoms *</label>
                            <textarea class="form-control" id="symptoms" name="symptoms" rows="3" required 
                                      placeholder="Describe what you observed..."></textarea>
                            <div class="form-text">E.g., Not eating, limping, fever, swollen area, etc.</div>
                        </div>

                        <div class="mb-3">
                            <label for="diagnosis" class="form-label">Diagnosis (Optional)</label>
                            <input type="text" class="form-control" id="diagnosis" name="diagnosis"
                                   placeholder="Enter diagnosis if known">
                        </div>

                        <div class="mb-3">
                            <label for="treatment" class="form-label">Treatment Given (Optional)</label>
                            <textarea class="form-control" id="treatment" name="treatment" rows="2"
                                      placeholder="Describe treatment provided..."></textarea>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="vetName" class="form-label">Veterinarian Name (Optional)</label>
                                <input type="text" class="form-control" id="vetName" name="vetName"
                                       placeholder="Enter vet name">
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="followUpDate" class="form-label">Follow-up Date (Optional)</label>
                                <input type="date" class="form-control" id="followUpDate" name="followUpDate">
                            </div>
                        </div>

                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> All health records are permanently saved and cannot be deleted to maintain historical accuracy.
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="javascript:history.back()" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-check-circle"></i> Save Health Record
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
