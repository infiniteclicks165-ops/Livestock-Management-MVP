<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-shield-check"></i> Record Vaccination</h4>
                </div>
                <div class="card-body">
                    <% if (error && error.length > 0) { %>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <%= error %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    <% } %>

                    <form action="/vaccinations/add" method="POST">
                        <div class="mb-3">
                            <label for="cowId" class="form-label">Select Cattle *</label>
                            <select class="form-select" id="cowId" name="cowId" required>
                                <option value="">Choose cattle...</option>
                                <% cows.forEach(cow => { %>
                                    <option value="<%= cow._id %>" 
                                            <%= selectedCow && selectedCow._id.toString() === cow._id.toString() ? 'selected' : '' %>>
                                        <%= cow.earTag %><% if (cow.name) { %> - <%= cow.name %><% } %>
                                    </option>
                                <% }) %>
                            </select>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="vaccineName" class="form-label">Vaccine Name *</label>
                                <input type="text" class="form-control" id="vaccineName" name="vaccineName" required
                                       placeholder="e.g., FMD, Brucellosis, Anthrax">
                                <div class="form-text">Enter the name or type of vaccine</div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="dosage" class="form-label">Dosage (Optional)</label>
                                <input type="text" class="form-control" id="dosage" name="dosage"
                                       placeholder="e.g., 5ml, 2cc">
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="injectionDate" class="form-label">Injection Date *</label>
                                <input type="date" class="form-control" id="injectionDate" name="injectionDate" 
                                       value="<%= new Date().toISOString().split('T')[0] %>" required>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="nextDueDate" class="form-label">Next Due Date (Optional)</label>
                                <input type="date" class="form-control" id="nextDueDate" name="nextDueDate">
                                <div class="form-text">When is the next dose due?</div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="administeredBy" class="form-label">Administered By (Optional)</label>
                            <input type="text" class="form-control" id="administeredBy" name="administeredBy"
                                   placeholder="Enter name of person/vet">
                        </div>

                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> Vaccination records are permanently saved to maintain complete health history.
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="javascript:history.back()" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Save Vaccination
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
