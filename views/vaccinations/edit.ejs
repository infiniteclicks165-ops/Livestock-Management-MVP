<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-pencil"></i> Edit Vaccination Record</h4>
                </div>
                <div class="card-body">
                    <% if (error && error.length > 0) { %>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <%= error %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    <% } %>

                    <div class="alert alert-info mb-3">
                        <strong>Cattle:</strong> <%= vaccination.cow.earTag %>
                        <% if (vaccination.cow.name) { %> - <%= vaccination.cow.name %><% } %>
                    </div>

                    <form action="/vaccinations/<%= vaccination._id %>/edit" method="POST">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="vaccineName" class="form-label">Vaccine Name *</label>
                                <input type="text" class="form-control" id="vaccineName" name="vaccineName" 
                                       value="<%= vaccination.vaccineName %>" required>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="dosage" class="form-label">Dosage</label>
                                <input type="text" class="form-control" id="dosage" name="dosage"
                                       value="<%= vaccination.dosage || '' %>">
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="injectionDate" class="form-label">Injection Date *</label>
                                <input type="date" class="form-control" id="injectionDate" name="injectionDate" 
                                       value="<%= vaccination.injectionDate.toISOString().split('T')[0] %>" required>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="nextDueDate" class="form-label">Next Due Date</label>
                                <input type="date" class="form-control" id="nextDueDate" name="nextDueDate"
                                       value="<%= vaccination.nextDueDate ? vaccination.nextDueDate.toISOString().split('T')[0] : '' %>">
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="administeredBy" class="form-label">Administered By</label>
                            <input type="text" class="form-control" id="administeredBy" name="administeredBy"
                                   value="<%= vaccination.administeredBy || '' %>">
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="/cows/<%= vaccination.cow._id %>" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
